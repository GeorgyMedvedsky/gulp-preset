  "bugs": {
    "url": "https://github.com/GeorgyMedvedsky/build-preset/issues"
  },
  "homepage": "https://github.com/GeorgyMedvedsky/build-preset#readme",
  "devDependencies": {
    "browser-sync": "^3.0.3",
    "del": "^6.0.0",
    "gulp": "^5.0.0",
    "gulp-concat-css": "^3.1.0",
    "gulp-plumber": "^1.2.1",
    "prettier": "^3.3.3",
    "stylelint": "^16.9.0"
  }
}
