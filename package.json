{
  "name": "gulp-preset",
  "version": "1.0.0",
  "description": "Заготовка для верстки",
  "main": "index.js",
  "scripts": {
    "test": "echo 'Привет!'",
    "check": "prettier --check './src/**/*.{html,css,js}'",
    "format": "prettier --write './src/**/*.{html,css,js}'",
    "lint": "stylelint './src/**/*.css'",
    "lintfix": "stylelint './src/**/*.css' --fix",
    "checkAll": "npm run check && npm run lint",
    "fixAll": "npm run format && npm run lintfix",
    "build": "gulp build",
    "dev": "gulp",
    "commit": "npm run fixAll && git add . && git commit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GeorgyMedvedsky/build-preset.git"
  },
  "keywords": [
    "preset"
  ],
